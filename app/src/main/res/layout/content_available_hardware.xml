<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_available_hardware"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="tld.anamtastic.www.anamtastic.AvailableHardwareActivity"
    tools:showIn="@layout/activity_available_hardware">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <CheckBox
            android:text="Mobile U/S"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox4"
            android:textSize="36sp"
            android:layout_marginBottom="12dp" />

        <CheckBox
            android:text="Mobile CT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox5"
            android:textSize="36sp"
            android:layout_marginBottom="12dp" />

        <CheckBox
            android:text="Mobile EEG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox6"
            android:textSize="36sp"
            android:layout_marginBottom="12dp" />

        <CheckBox
            android:text="SONAS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox7"
            android:textSize="36sp"
            android:layout_marginBottom="12dp" />

        <CheckBox
            android:text="LAOS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox8"
            android:textSize="36sp" />
    </LinearLayout>

</RelativeLayout>
